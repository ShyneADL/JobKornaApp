    "version": "0.2.0",
    "configurations": [
        {
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}"
            ],
            "name": "Launch Extension",
            "outFiles": [
                "${workspaceFolder}/out/**/*.js"
            ],
            "preLaunchTask": "npm",
            "request": "launch",
            "type": "extensionHost"
        },
        {
            "type": "radon-ide",
            "request": "launch",
            "name": "Radon IDE panel",
            "ios": {
                "configuration": "Debug"
            },
            "android": {
                "buildType": "debug"
            }
        }
    ]
}